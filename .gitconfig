[includeIf “gitdir:~/workspaces/perso/”] # include for all .git projects under /workspaces/perso/ 
path = ~/personal/.gitconfig.pers
 
[includeIf “gitdir:~/workspaces/work/monop”] # include for all .git projects under /workspaces/work/monop/
path = ~/work/.gitconfig.monop

[init]
	defaultBranch = main
[pull]
	rebase = true
[branch]
  autosetupmerge = always
  autosetuprebase = always
[core]
	pager = delta --theme="night-owlish"
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
	ignorecase = false
[interactive]
	diffFilter = delta --color-only
[web]
	browser = google-chrome
[rerere]
	enabled = 1
	autoupdate = 1
[push]
	default = tracking
[color]
	ui = true
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[difftool]
	prompt = false